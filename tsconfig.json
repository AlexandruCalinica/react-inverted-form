{
  "compilerOptions": {
    "strict": true,
    "module": "es2015",
    "target": "es2018",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "assets", "sandbox"]
}